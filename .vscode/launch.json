{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--gpu", "1"
            ]
        },

        {
            "name": "Train (Debug)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-E", "experiments/tmp", 
                "--gpu", "0", 
                "--vport", "8889"
            ]
        },

        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-E", "experiments/tmp", 
                "--gpu", "0"
            ]
        },

        {
            "name": "Pregenerate (TailorNet)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-G", "male", 
                "-U", "shirt", 
                "-L", "short-pant", 
                "-N", "10000",
                "--preextract"
            ]
        },

        {
            "name": "Copy LSUN",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--lsun_dir", "../lsun/", 
                "--train_files_dir", "train_files/"
            ]
        },

        {
            "name": "Predict",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--gender", "male",
                "--image_dir", "./demo/", 
                "--save_dir", "./output/", 
                "--visualise_samples", 
                "--visualise_uncropped", 
                "--pose_shape_weights", "experiments/resnet50-style-params/saved_models/epoch_095.tar"
            ]
        },

        {
            "name": "Evaluate",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--pose_shape_weights", "experiments/res50-400k-t+p/saved_models/epoch_195.tar"
            ]
        },

        {
            "name": "(Pre-Process) Evaluate",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--dataset_path", "/data/3DPW/"
            ]
        },

        {
            "name": "Check pred format (AGORA)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--predZip", "/agora-evaluation/validation_predictions.zip",
                "--extractZipFolder", "/agora-evaluation/predictions/frankmocap",
                "--modeltype", "SMPL"
            ]
        },

        {
            "name": "Evaluate AGORA",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--pred_path", "/output/agora/pred/frankmocap/",
                "--result_savePath", "/output/agora/results/frankmocap/",
                "--imgFolder", "/data/agora/validation/",
                "--loadPrecomputed", "/output/agora/pred/frankmocap/",
                "--baseline", "frankmocap",
                "--modeltype", "SMPL",
                "--indices_path", "utils",
                "--kid_template_path", "/data/agora/smpl/smpl_kid_template.npy",
                "--modelFolder", "/data/agora/smpl/"
            ]
        }
    ]
}
