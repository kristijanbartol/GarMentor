{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--gpu", "1"
            ]
        },

        {
            "name": "Python: Train (Debug)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-E", "experiments/tmp", 
                "--gpu", "0", 
                "--vport", "8889"
            ]
        },

        {
            "name": "Python: Train",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-E", "experiments/resnet50-coco-shape-only", 
                "--gpu", "1"
            ]
        },

        {
            "name": "Python: Pregenerate (TailorNet)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-G", "male", 
                "-U", "shirt", 
                "-L", "short-pant", 
                "-N", "10000",
                "--preextract"
            ]
        },

        {
            "name": "Python: Copy LSUN",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--lsun_dir", "../lsun/", 
                "--train_files_dir", "train_files/"
            ]
        },

        {
            "name": "Python: Predict",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--gender", "male",
                "--image_dir", "./demo/", 
                "--save_dir", "./output/", 
                "--visualise_samples", 
                "--visualise_uncropped", 
                "--pose_shape_weights", "experiments/resnet50-style-params/saved_models/epoch_095.tar"
            ]
        },

        {
            "name": "Python: Evaluate",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--pose_shape_weights", "experiments/resnet50-style-params/saved_models/epoch_095.tar"
            ]
        }
    ]
}
